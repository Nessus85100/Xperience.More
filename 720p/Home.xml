<window id="0">
		<defaultcontrol always="true">20</defaultcontrol>
		<allowoverlay>yes</allowoverlay>
	  <onload condition="IsEmpty(Window(Home).Property(Watchlist_Running))">RunScript(script.watchlist,movies=true&amp;episodes=true&amp;albums=true&amp;limit=10)</onload>
	  <onload condition="IsEmpty(Window(Home).Property(Watchlist_Running))">SetProperty(Watchlist_Running,True)</onload>		
		<animation effect="fade" start="0" end="0" time="10000" condition="Window.Previous(Startup) + Skin.HasSetting(intro-vid)">WindowOpen</animation>
		<controls>



				<!-- Backgrounds -->
				<include>CommonContent</include>
		    <include>HomeFanartSlideShow</include>
		    <include>RecentListWatchListFanart</include>
				<!-- Bottom -->
				<include>CommonStage</include>	
				<!-- Submenu -->
				<include condition="!Skin.HasSetting(HideSubMenuMovies)">HomeSubMenuMovies</include>
				<include condition="!Skin.HasSetting(HideSubMenuTVShows)">HomeSubMenuTVShows</include>
				<include condition="!Skin.HasSetting(HideSubMenuMusic)">HomeSubMenuMusic</include>
				<include condition="!Skin.HasSetting(HideSubMenuSettings)">HomeSubMenuSettings</include>
				<include condition="!Skin.HasSetting(HideSubMenuAddons)">HomeSubMenuAddons</include>
				<!-- Bottom Buttons -->
				<include>shutdown-favs</include>
				<!-- Animated and static Logo -->
				<include>Ripple-Logo</include>
				<!-- RSS Feed-->
				<include>RSS</include>
				<!-- Home Slider Controls -->
				<include>HomeWraplist</include>
				<!-- Home Views GUI-->
				<include>HomeXperience</include>
				<!-- Recent Added and categories information -->
				<include>Home-Widgets</include>
				<!-- Now Playing information -->
				<include>Home-NowPlaying</include>
				<!-- Weather information -->
				<include>WeatherTemp</include>
				<include>Common-NowPlaying</include>
				<!-- Debug Info overlay -->
				<include>debug</include>

		</controls>
</window>