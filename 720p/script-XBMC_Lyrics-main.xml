<window>
	<allowoverlay>no</allowoverlay>
	<defaultcontrol always="false">101</defaultcontrol>
	<controls>
		<control type="group">
			<include>NowPlayingFullscreen</include>
			<control type="image">
				<description>background image</description>
				<include>FullscreenDimentions</include>
				<colordiffuse>D9FFFFFF</colordiffuse>
				<texture>dialogs/lyrics/lyrics-bg.png</texture>
			</control>
		<control type="group">
				<posx>305</posx>
				<posy>67</posy>
			<control type="label.">
			  <description>header label</description>
				<posx>5</posx>
				<posy>80</posy>
				<width>470</width>
				<label>$LOCALIZE[SCRIPT0]</label>
				<font>Nessus-28</font>
				<textcolor>settingspos2</textcolor>
				<align>center</align>
				<scroll>true</scroll>
				<scrollspeed>20</scrollspeed>
			</control>
			<control type="image">
				<description>Cover</description>
				<posx>5</posx>
				<posy>75</posy>
				<width>70</width>
				<height>70</height>
				<texture background="true">$INFO[MusicPlayer.Cover]</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="label">
				<description>Song label</description>
				<posx>85</posx>
				<posy>70</posy>
				<width>550</width>
				<height>30</height>
				<font>Nessus-22</font>
				<label>[B]$INFO[MusicPlayer.Title][/B]</label>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>settingspos2</textcolor>
			</control>
			<control type="label">
				<description>Artist label</description>
				<posx>85</posx>
				<posy>98</posy>
				<width>550</width>
				<height>30</height>
				<font>Nessus-20</font>
				<label>$INFO[MusicPlayer.Artist]</label>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>settingspos2</textcolor>
			</control>
			<control type="label">
				<description>Artist label</description>
				<posx>85</posx>
				<posy>118</posy>
				<width>550</width>
				<height>30</height>
				<font>Nessus-20</font>
				<label>$INFO[MusicPlayer.Album]</label>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>settingspos2</textcolor>
			</control>
			<control type="label">
				<description>Current Song Time</description>
				<posx>665</posx>
				<posy>110</posy>
				<width>550</width>
				<height>30</height>
				<font>SubMenu</font>
				<label>$INFO[MusicPlayer.Time]</label>
				<align>right</align>
				<aligny>center</aligny>
				<textcolor>settingspos2</textcolor>
			</control>
		</control>
			<!-- ** Required ** Do not change <id> or <type> (Text box for lyrics) -->
			<control type="textbox" id="100">
				<description>textarea</description>
				<posx>315</posx>
				<posy>365</posy>
				<width>650</width>
				<height>325</height>
				<align>center</align>
				<font>Nessus-20</font>
				<textcolor>settingspos2</textcolor>
				<align>center</align>
				<onup>100</onup>
				<ondown>100</ondown>
				<onleft>101</onleft>
				<onright>101</onright>
				<pagecontrol>101</pagecontrol>
			</control>
			<control type="spincontrol" id="101">
				<visible>false</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
			<control type="list" id="110">
				<posx>350</posx>
				<posy>221</posy>
				<width>650</width>
				<height>330</height>
				<onleft>111</onleft>
				<onright>111</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>111</pagecontrol>
			  <scrolltime tween="cubic" easing="out">500</scrolltime>
				<itemlayout height="25">
					<control type="label">
						<posx>275</posx>
						<posy>0</posy>
						<width>650</width>
						<height>25</height>
				    <font>Nessus-22</font>
						<aligny>center</aligny>
						<align>center</align>
				    <textcolor>settingspos2</textcolor>
						<align>left</align>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="25">
					<control type="label">
						<posx>275</posx>
						<posy>0</posy>
						<width>650</width>
						<height>25</height>
				    <font>Nessus-22</font>
						<aligny>center</aligny>
						<align>center</align>
				    <textcolor>settingspos2</textcolor>
						<align>left</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<posx>275</posx>
						<posy>0</posy>
						<width>650</width>
						<height>25</height>
				    <font>Nessus-22</font>
						<aligny>center</aligny>
						<align>center</align>
				    <textcolor>guideblue</textcolor>
						<align>left</align>
						<label fallback="--">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="111">
				<description>Next page button</description>
				<posx>802</posx>
				<posy>555</posy>
				<width>21</width>
				<height>35</height>
				<font>Nessus-20</font>
				<textcolor>settingspos2</textcolor>	
				<focusedcolor>white</focusedcolor>
				<disabledcolor>settingspos8</disabledcolor>
				<textoffsetx>48</textoffsetx>
				<textoffsety>4</textoffsety>
				<align>left</align>
				<aligny>top</aligny>
				<subtype>page</subtype>
				<showonepage>true</showonepage>
				<onleft>111</onleft>
				<onright>111</onright>
				<ondown>110</ondown>
				<onup>110</onup>
				<visible>Control.IsVisible(110)</visible>
			</control>
			<control type="label">
				<description>Scraper label</description>
				<posx>310</posx>
				<posy>550</posy>
				<width>300</width>
				<height>35</height>
				<label>Lyrics Source: $INFO[Control.GetLabel(200)]</label>
				<font>Nessus-20</font>
				<textcolor>settingspos2</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<visible>Control.IsVisible(110)</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Scraper label) -->
			<control type="label" id="200">
				<description>Scraper label</description>
				<visible>false</visible>
				<visible>Control.IsVisible(110)</visible>
			</control>


			<!-- ** Required ** Do not change <id> or <type> -->
			<!-- The following do not appear anywhere with CU-Lyrics -->
			<control type="spincontrol" id="121">
				<visible>false</visible>
			</control>
			
			<control type="list" id="120">
				<visible>false</visible>
			</control>
			
		</control>
	</controls>
</window>