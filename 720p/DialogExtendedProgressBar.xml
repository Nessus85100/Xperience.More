<window id="151">
		<include>OpenCloseAnimation</include>
		<controls>
				<control type="group">
						<visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation)</visible>
						<animation type="Conditional" condition="Window.IsVisible(volumebar) | Window.IsVisible(mutebug)" reversible="true">
							<effect type="slide" end="-225,0" time="500" tween="back" easing="out" />
						</animation>
						<control type="image">
								<description>Media Scan Back</description>
								<posx>463r</posx>
								<posy>0</posy>
								<width>458</width>
								<height>75</height>
								<texture>osd/mediascanning/media_scanning_background.png</texture>
						</control>
						<control type="label" id="30">
								<description>Current Directory Label</description>
								<posx>443r</posx>
								<posy>15</posy>
								<width>365</width>
								<height>15</height>
								<font>XPM_font_19</font>
								<haspath>yes</haspath>
								<textcolor>lightgrey</textcolor>
								<align>left</align>
								<aligny>-</aligny>
								<animation type="Conditional" reversible="false" condition="!IsEmpty(System.ProfileName)" loop="true">
									<effect type="fade" start="0" end="100" time="300" delay="0" />
									<effect type="fade" start="100" end="0" time="300" delay="5000" />
									<effect type="fade" start="100" end="0" time="300" delay="10000" />
								</animation>
						</control>
						<control type="label" id="31">
								<description>Current Item Label</description>
								<posx>443r</posx>
								<posy>15</posy>
								<width>365</width>
								<height>15</height>
								<font>XPM_font_19</font>
								<textcolor>lightgrey</textcolor>
								<align>left</align>
								<aligny>-</aligny>
								<animation type="Conditional" reversible="false" condition="!IsEmpty(System.ProfileName)" loop="true">
									<effect type="fade" start="0" end="100" time="300" delay="5300" />
									<effect type="fade" start="100" end="0" time="300" delay="10000" />
								</animation>
						</control>
						<control type="progress" id="32">
							<description>progress control</description>
								<posx>443r</posx>
								<posy>41</posy>
								<width>420</width>
								<height>16</height>
								<texturebg>OSD/mediascanning/progress-back.png</texturebg>
								<lefttexture>OSD/mediascanning/left-progress.png</lefttexture>
								<midtexture>OSD/mediascanning/center-progress.png</midtexture>
								<righttexture>OSD/mediascanning/right-progress.png</righttexture>
								<reveal>true</reveal>
						</control>
					</control>

	<!-- Debug Info -->
	<include>debug</include>

	</controls>
</window>