						<control type="image"> 
							<description>ClearART</description>
							<posx>950</posx>     
							<posy>534</posy>    
							<width>330</width>     
							<height>185</height> 
							<texture>$INFO[Player.FolderPath]/clearart.png</texture>
							<aspectratio>keep</aspectratio>
							<visible>VideoPlayer.Content(episodes)</visible>
						</control>
						<control type="image"> 
							<description>ClearART</description>
							<posx>950</posx>     
							<posy>534</posy>    
							<width>330</width>     
							<height>185</height> 
							<texture>$INFO[Player.FolderPath]../clearart.png</texture>
							<aspectratio>keep</aspectratio>
							<visible>VideoPlayer.Content(episodes)</visible>
						</control>
