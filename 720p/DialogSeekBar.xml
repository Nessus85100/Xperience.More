						</control>
						<control type="progress" id="23">
								<posx>45</posx>
								<posy>0</posy>
								<width>1200</width>
								<height>30</height>
								<info>Player.Progress</info>
								<texturebg>osd/fullscreen/progress-background.png</texturebg>
								<lefttexture>osd/fullscreen/left-progress.png</lefttexture>
								<midtexture>osd/fullscreen/center-progress.png</midtexture>
								<righttexture>osd/fullscreen/right-progress.png</righttexture>
								<overlaytexture>-</overlaytexture>
								<colordiffuse>FF7acafe</colordiffuse>
						</control>
						<control type="label">
								<posx>47r</posx>
								<posy>18</posy>
								<width>300</width>
								<height>25</height>
								<label>$INFO[VideoPlayer.Duration]<!--($INFO[System.Time])--></label>
								<textcolor>grey</textcolor>
								<font>osdinfo</font>
								<align>right</align>
						</control>
						<control type="label">
								<posx>47</posx>
								<posy>18</posy>
								<width>300</width>
								<height>25</height>
