<window type="dialog" id="142">
		<defaultcontrol always="true">9000</defaultcontrol>
		<controls>
			<!-- ============ -->
			<!-- Mini Version -->
			<!-- ============ -->
			<control type="group">
<!--  	<visible>!Skin.HasSetting(FullscreenInfo)</visible> -->
					<control type="group">
						<include>NowPlayingFullscreen</include>
						<!-- Main Part -->
						<control type="image">
								<!-- Back plate -->
								<posx>0</posx>
								<posy>0</posy>
								<width>1280</width>
								<height>200</height>
								<texture flipy="true">osd/fullscreen/osd-bg.png</texture>
								<aspectratio>stretch</aspectratio>
						</control>
						<control type="textbox">
								<!-- Plot info -->
								<posx>600r</posx>
								<posy>5</posy>
								<width>580</width>
								<height>83</height>
								<label>$INFO[VideoPlayer.Plot]</label>
								<textcolor>offwhite</textcolor>
								<align>justify</align>
								<font>smallinfoscreen</font>
								<scroll>false</scroll>
								<scrollout>false</scrollout>
								<autoscroll delay="5000" time="10000" repeat="10000" />
						</control>
						<control type="image">
								<description>Poster</description>
								<posx>10</posx>
								<posy>5</posy>
								<width>85</width>
								<height>120</height>
								<visible>true</visible>
								<texture fallback="DefaultVideo.png">$INFO[videoplayer.cover]</texture>
								<aspectratio>keep</aspectratio>
								<fadetime>300</fadetime>
						</control>
					<control type="group">
						<posy>-40</posy>
						<control type="label">
								<!-- Title label -->
								<posx>115</posx>
								<posy>45</posy>
								<width>550</width>
								<font>Nessus-28</font>
								<label>[B]$INFO[VideoPlayer.Title][/B]</label>
								<textcolor>white</textcolor>
								<align>left</align>
								<scroll>false</scroll>
						</control>
					<!-- New coded way for doing labels next each other -->
					<control type="grouplist">
						<posx>115</posx>
						<posy>70</posy>
						<width>530</width>
						<align>left</align>
						<orientation>horizontal</orientation>
						<!-- Year label -->
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width min="10" max="530">auto</width>
							<font>Nessus-20</font>
							<label>$LOCALIZE[31223] [COLOR=offwhite]$INFO[VideoPlayer.Year][/COLOR]</label>
							<textcolor>grey</textcolor>
							<align>left</align>
							<scroll>false</scroll>
							<visible>!IsEmpty(VideoPlayer.Year) + IsEmpty(VideoPlayer.TVShowTitle)</visible>
						</control>
						<!-- Genre label -->
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width min="10" max="530">auto</width>
							<font>Nessus-20</font>
							<label>$LOCALIZE[31224] [COLOR=offwhite]$INFO[VideoPlayer.Genre][/COLOR]</label>
							<textcolor>grey</textcolor>
							<align>left</align>
							<scroll>false</scroll>
							<visible>!IsEmpty(VideoPlayer.Genre) + IsEmpty(VideoPlayer.TVShowTitle)</visible>
						</control>
						<!-- TVShows -->
						<!-- Episode label -->
						<control type="label">
							<posx>115</posx>
							<posy>0</posy>
							<width min="10" max="530">auto</width>
							<font>Nessus-20</font>
							<label>$LOCALIZE[31425] [COLOR=offwhite]$INFO[VideoPlayer.Season][/COLOR]</label>
							<textcolor>grey</textcolor>
							<align>left</align>
							<scroll>false</scroll>
							<visible>!IsEmpty(VideoPlayer.Season) + !IsEmpty(VideoPlayer.TVShowTitle)</visible>
						</control>
						<control type="label">
							<posx>115</posx>
							<posy>0</posy>
							<width min="5" max="530">auto</width>
							<font>Nessus-20</font>
							<label>,</label>
							<textcolor>grey</textcolor>
							<align>left</align>
							<scroll>false</scroll>
							<visible>!IsEmpty(VideoPlayer.Episode) + !IsEmpty(VideoPlayer.TVShowTitle) + !IsEmpty(VideoPlayer.Season)</visible>
						</control>
						<control type="label">
							<posx>115</posx>
							<posy>0</posy>
							<width min="10" max="530">auto</width>
							<font>Nessus-20</font>
							<label>$LOCALIZE[31231] [COLOR=offwhite]$INFO[VideoPlayer.Episode][/COLOR]</label>
							<textcolor>grey</textcolor>
							<align>left</align>
							<scroll>false</scroll>
							<visible>!IsEmpty(VideoPlayer.Episode) + !IsEmpty(VideoPlayer.TVShowTitle)</visible>
						</control>
					</control>
					<control type="grouplist">
						<posx>115</posx>
						<posy>90</posy>
						<width>530</width>
						<align>left</align>
						<orientation>horizontal</orientation>
						<!-- Rating label -->
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width min="10" max="530">auto</width>
							<label>Rating/Votes:  [COLOR=offwhite]$INFO[VideoPlayer.RatingAndVotes][/COLOR]</label>
							<font>Nessus-20</font>
							<textcolor>grey</textcolor>
							<align>left</align>
							<scroll>false</scroll>
							<visible>!IsEmpty(VideoPlayer.RatingAndVotes)</visible>
						</control>
						<!-- DVD Discs -->
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width min="10" max="530">auto</width>
							<label>  $LOCALIZE[21396] [COLOR=red]$INFO[Player.ChapterName][/COLOR] [COLOR=offwhite]$INFO[Player.Chapter]/$INFO[Player.ChapterCount][/COLOR]</label>
							<font>Nessus-20</font>
							<textcolor>grey</textcolor>
							<align>left</align>
							<scroll>false</scroll>
							<visible>Player.ChapterCount + !VideoPlayer.Content(Episodes)</visible>
						</control>
					</control>
					</control>
					<control type="group">
						<posx>293r</posx>
						<posy>93</posy>
						<include>FlagsInfo</include>
					</control>
					<control type="group">
							<posx>96</posx>
							<posy>70</posy>
						<control type="progress" id="23">
