					<alttexturefocus>osd/fullscreen/fast-forward-fo-active.png</alttexturefocus>
					<alttexturenofocus>osd/fullscreen/fast-forward-nofo-active.png</alttexturenofocus>
          <onclick>playercontrol(forward)</onclick>
          <onup>20</onup>
          <ondown>-</ondown>
          <onleft>5</onleft>
          <onright>7</onright>
