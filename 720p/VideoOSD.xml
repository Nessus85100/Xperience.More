          <!--label>$LOCALIZE[208]</label-->
          <posx>160</posx>
          <height>80</height>
          <width>76</width>
          <texturefocus>osd/fullscreen/play-fo.png</texturefocus>
          <texturenofocus>osd/fullscreen/play-nofo.png</texturenofocus>
