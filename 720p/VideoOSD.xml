          <posx>660</posx>
          <posy>20</posy>
          <height>55</height>
          <width>55</width>
          <texturefocus>osd/fullscreen/dvd-fo.png</texturefocus>
          <texturenofocus>osd/fullscreen/dvd-nofo.png</texturenofocus>
