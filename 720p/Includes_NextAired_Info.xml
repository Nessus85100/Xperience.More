				<width>445</width>
				<height>75</height>
				<aspectratio>stretch</aspectratio>
				<texture>dialogs/kai/error.png</texture>
			</control>
			<control type="label">
				<posx>93</posx>
				<posy>0</posy>
				<width>330</width>
				<height>50</height>
        <textcolor>ltgreyblue</textcolor>
				<font>XPM_font_22</font>
