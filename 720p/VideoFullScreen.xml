<window id="2005">
 <defaultcontrol>-</defaultcontrol>
	<controls>

		<!-- info dialog Press O when a video is playing fullscreen -->
	<control type="group">
		<visible>!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo)</visible>
    <animation type="WindowOpen">
      <effect type="fade" start="0" end="100" time="250" delay="100" tween="sine" easing="out" />
    </animation>
    <animation type="WindowClose">
      <effect type="fade" start="100" end="0" time="500" delay="100" tween="sine" easing="out" />
    </animation>
    <animation type="Visible">
      <effect type="fade" start="0" end="100" time="350" delay="100" tween="sine" easing="out" />
    </animation>
    <animation type="Hidden">
      <effect type="fade" start="100" end="0" time="500" delay="100" tween="sine" easing="out" />
    </animation>
	
      <control type="image">
				<posx>-200</posx>
				<posy>-20</posy>
				<width>1480</width>
				<height>720</height>
				<texture flipy="true">osd/fullscreen/osd-bg.png</texture>
				<aspectratio>stretch</aspectratio>
				<fadetime>200</fadetime>
				<colordiffuse>D5FFFFFF</colordiffuse>
      </control>
			
