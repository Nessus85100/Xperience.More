<window id="29">
	<defaultcontrol always="true">52</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	
	<controls>
		<control type="image">
			<description>background image</description>
			<include>FullscreenDimentions</include>
			<texture>windows/logon/bg.jpg</texture>
		</control>

		<control type="group">
		<include>CommonViewAnimations</include>
			<posx>500</posx>
			<posy>165</posy>

			<control type="wraplist" id="52">
				<description>Profiles Area</description>
				<posx>5</posx>
				<posy>5</posy>
				<width>400</width>
				<height>405</height>
				<focusposition>1</focusposition>
				<orientation>vertical</orientation>
				<onleft>20</onleft>
				<onright>20</onright>
				<onup>52</onup>
				<ondown>52</ondown>
				<itemlayout height="135">
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>96</width>
						<height>96</height>
						<texture fallback="unknown-user.png" diffuse="windows/logon/profile-icon-diffuse.png">$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>106</width>
						<height>106</height>
						<texture>windows/logon/profile-icon-overlay.png</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="135">
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>97</width>
						<height>97</height>
						<texture  fallback="unknown-user.png" diffuse="windows/logon/profile-icon-diffuse.png">$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
						<animation reversible="false" effect="zoom" start="100" end="150" center="auto" time="200">focus</animation>
						<animation reversible="false" effect="zoom" start="150" end="100" center="auto" time="200">unfocus</animation>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>-1</posy>
						<width>107</width>
						<height>106</height>
						<texture>windows/logon/profile-icon-overlay.png</texture>
						<aspectratio>keep</aspectratio>
						<animation reversible="false" effect="zoom" start="100" end="150" center="auto" time="200">focus</animation>
						<animation reversible="false" effect="zoom" start="150" end="100" center="auto" time="200">unfocus</animation>
					</control>
				  <control type="label">
						<posx>140</posx>
						<posy>10</posy>
						<width>400</width>
						<height>40</height>
						<font>DejaVuSans-30</font>
						<align>left</align>
						<aligny>center</aligny>
				    <textcolor>settingspos2</textcolor>
						<shadowcolor>darkgrey</shadowcolor>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
						<animation reversible="false" effect="fade" start="0" end="100" time="300">focus</animation>
						<animation reversible="false" effect="fade" start="100" end="0" time="300">unfocus</animation>
				  </control>
				  <control type="label">
						<posx>140</posx>
						<posy>40</posy>
						<width>400</width>
						<height>40</height>
						<font>Nessus-20</font>
						<align>left</align>
						<aligny>center</aligny>
				    <textcolor>settingspos2</textcolor>
						<shadowcolor>darkgrey</shadowcolor>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label2]</label>
						<animation reversible="false" effect="fade" start="0" end="100" time="300">focus</animation>
						<animation reversible="false" effect="fade" start="100" end="0" time="300">unfocus</animation>
				  </control>
				</focusedlayout>
			</control>
	</control>

					<control type="button" id="20">
						<description>Power push button</description>
						<posx>1190</posx>
						<posy>650</posy>
						<width>55</width>
						<height>55</height>
						<label>-</label>
						<font>-</font>
						<onclick>ActivateWindow(ShutdownMenu)</onclick>
						<texturefocus>windows/logon/login-power-fo.png</texturefocus>
						<texturenofocus>windows/logon/login-power-nf2.png</texturenofocus>
						<pulseonselect>true</pulseonselect>
						<onleft>52</onleft>
						<onright>52</onright>
						<onup>52</onup>
						<ondown>52</ondown>
				</control>
					<control type="image.">
						<posx>30</posx>
						<posy>650</posy>
						<width>150</width>
						<height>45</height>
						<aligny>center</aligny>
						<texture>dialogs/other/xbmc-logo.png</texture>
					</control>
					<control type="label.">
						<posx>30</posx>
						<posy>660</posy>
						<width>400</width>
						<height>40</height>
						<font>Nessus-24</font>
						<textcolor>settingspos2</textcolor>
						<aligny>center</aligny>
						<label>$INFO[System.Date] $INFO[System.Time]</label>
					</control>

	</controls>
</window>