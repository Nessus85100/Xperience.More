		<import addon="script.globalsearch" version="1.1.0" />
		<import addon="script.artistslideshow" version="1.4.6" />
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="0.75" debugging="false">
